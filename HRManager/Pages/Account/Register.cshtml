@page
@model HRManager.Pages.Account.RegisterModel
@{
}
<div class="container my-5">
    <div class="row justify-content-center p-4 pb-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
        <div class="col-lg-6 col-md-8 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-4 fw-bold lh-1 text-body-emphasis text-center">Register</h1>
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="User.Email" class="form-label">Email address</label>
                    <input asp-for="User.Email" class="form-control" />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="User.Password" class="form-label">Password</label>
                    <input asp-for="User.Password" class="form-control" />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Create" class="btn btn-success w-100" />
                </div>
                <div class="mt-3">
                    <a asp-page="Login" class="btn btn-primary w-100">Back to Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
