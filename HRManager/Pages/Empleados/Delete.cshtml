@page
@model HRManager.Pages.Empleados.DeleteModel
@{
    ViewData["Title"] = "Delete Empleado";
}
<h1 class="text-center my-4">Delete Empleado</h1>

<div class="text-center">
    <h3 class="text-danger">Are you sure you want to delete this empleado?</h3>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="border p-4 bg-light shadow-sm rounded">
            <h4>Empleado Details</h4>
            <hr />
            <dl class="row">

                <dt>@Html.DisplayNameFor(model => model.Empleado.Nombre)</dt>
                <dd>@Html.DisplayFor(model => model.Empleado.Nombre)</dd>


                <dt>@Html.DisplayNameFor(model => model.Empleado.Apellido)</dt>
                <dd>@Html.DisplayFor(model => model.Empleado.Apellido)</dd>


                <dt>@Html.DisplayNameFor(model => model.Empleado.Email)</dt>
                <dd>@Html.DisplayFor(model => model.Empleado.Email)</dd>


                <dt>@Html.DisplayNameFor(model => model.Empleado.Telefono)</dt>
                <dd>@Html.DisplayFor(model => model.Empleado.Telefono)</dd>


                <dt>@Html.DisplayNameFor(model => model.Empleado.FechaContratacion)</dt>
                <dd>@Html.DisplayFor(model => model.Empleado.FechaContratacion)</dd>


                <dt>@Html.DisplayNameFor(model => model.Empleado.Salario)</dt>
                <dd>@Html.DisplayFor(model => model.Empleado.Salario)</dd>

                <dt>@Html.DisplayNameFor(model => model.Empleado.Departamento.NombreDepartamento)</dt>
                <dd>@Html.DisplayFor(model => model.Empleado.Departamento.NombreDepartamento)</dd>

    
                <dt>@Html.DisplayNameFor(model => model.Empleado.Cargo.TituloCargo)</dt>
                <dd>@Html.DisplayFor(model => model.Empleado.Cargo.TituloCargo)</dd>
            </dl>
        </div>

        <div class="text-center mt-4">
            <form method="post" class="d-inline">
                <input type="hidden" asp-for="Empleado.Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg me-2" />
            </form>
            <a asp-page="./Index" class="btn btn-primary btn-lg">Back to List</a>
        </div>
    </div>
</div>

