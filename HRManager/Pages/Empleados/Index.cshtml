@page
@model HRManager.Pages.Empleados.IndexModel
@{
    ViewData["Title"] = "Index Empleados";
}
<h1>Index Empleados</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Crear Nuevo Empleado</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Empleados[0].Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Empleados[0].Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Empleados[0].Email)</th>
            <th>@Html.DisplayNameFor(model => model.Empleados[0].Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Empleados[0].FechaContratacion)</th>
            <th>@Html.DisplayNameFor(model => model.Empleados[0].Salario)</th>
            <th>Departamento</th>
            <th>Cargo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Empleados)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaContratacion)</td>
                <td>@Html.DisplayFor(modelItem => item.Salario)</td>
                <td>@Html.DisplayFor(modelItem => item.Departamento.NombreDepartamento)</td>
                <td>@Html.DisplayFor(modelItem => item.Cargo.TituloCargo)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>



