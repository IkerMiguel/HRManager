@page
@model HRManager.Pages.Nominas.DeleteModel
@{
    ViewData["Title"] = "Delete Nomina";
}
<h1 class="text-center my-4">Delete Nomina</h1>

<div class="text-center">
    <h3 class="text-danger">Are you sure you want to delete this nomina ?</h3>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="border p-4 bg-light shadow-sm rounded">
            <h4>Nomina Details</h4>
            <hr />
            <dl class="row">

                <dt>@Html.DisplayNameFor(model => model.Nomina.Empleado.Nombre)</dt>
                <dd>@Html.DisplayFor(model => model.Nomina.Empleado.Nombre)</dd>

                <dt>@Html.DisplayNameFor(model => model.Nomina.PeriodoInicio)</dt>
                <dd>@Html.DisplayFor(model => model.Nomina.PeriodoInicio)</dd>

                <dt>@Html.DisplayNameFor(model => model.Nomina.PeriodoFin)</dt>
                <dd>@Html.DisplayFor(model => model.Nomina.PeriodoFin)</dd>

                <dt>@Html.DisplayNameFor(model => model.Nomina.TotalPagado)</dt>
                <dd>@Html.DisplayFor(model => model.Nomina.TotalPagado)</dd>
            </dl>
        </div>

        <div class="text-center mt-4">
            <form method="post" class="d-inline">
                <input type="hidden" asp-for="Nomina.Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-lg me-2" />
            </form>
            <a asp-page="./Index" class="btn btn-primary btn-lg">Back to List</a>
        </div>
    </div>
</div>
